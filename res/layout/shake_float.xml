<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_dialog"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_bg2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/float_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:src="@drawable/find_more_friend_shake" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            
            android:paddingTop="20dp"
            android:text="世  界  之  最"
            android:textColor="#FF0000"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/float_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/float_title"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="ddddddddddddddddddddddddddddddddddddddddddd"
        android:textColor="#000" />

    <Button
        android:id="@+id/onemore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_green"
        android:gravity="center"
        android:onClick=""
        android:text="再试一次"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>